{% extends 'base.html.twig' %}

{% block title %}Utilisateur - {{ user.username }}{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.picture }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning btn-sm mb-1" href="{{ path('app_back_user_edit', {'id': user.id}) }}">Modifier</a>
    {{ include('back/user/_delete_form.html.twig') }}
    <div>
    <a class="btn btn-primary btn-sm mb-1" href="{{ path('app_back_user_index') }}">Retourner à la liste des utilisateurs</a>
    </div>

{% endblock %}
