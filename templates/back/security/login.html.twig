{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<form class="login-form me-5 col-md-4" method="post">
    {% include "components/_flash.html.twig" %}

    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>

    <label class="mb-1 " for="inputEmail">E-mail</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>

    <label class="mt-3 mb-1" for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="login-button btn btn-primary mt-3 btn-sm" type="submit">Se connecter</button>
</form>
{% endblock %}
